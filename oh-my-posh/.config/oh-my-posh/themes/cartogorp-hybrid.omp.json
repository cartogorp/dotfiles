{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "left",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "prefix": ""
          },
          "template": " \uf322 ",
          "foreground": "#ffffff",
          "background": "default",
          "type": "os",
          "style": "powerline"
        },
        {
          "properties": {
            "home_icon": "~",
            "max_depth": 2,
            "style": "folder",
            "truncate_to_repo": true
          },
          "template": " \ue5ff {{ .Path }} ",
          "foreground": "#c3e88d",
          "powerline_symbol": "\ue0b0",
          "background": "default",
          "type": "path",
          "style": "powerline"
        },
        {
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": " \uf418 {{ .HEAD }}{{ if .Working.Changed }} \ueeb1{{ end }}{{ if .Staging.Ahead }} \uf062{{ end }}{{ if .Staging.Behind }} \uf063{{ end }} ",
          "foreground": "#82aaff",
          "powerline_symbol": "\ue0b0",
          "background": "default",
          "type": "git",
          "style": "powerline"
        }
      ]
    },
    {
      "type": "right",
      "alignment": "right",
      "segments": [
        {
          "template": "{{ if eq .UserName \"root\" }} \uf023 {{ else }} \uf007 {{ end }}{{ .UserName }}{{ if .SSHSession }} \uf489 {{ .HostName }}{{ end }} ",
          "foreground": "#f78c6c",
          "powerline_symbol": "\ue0b2",
          "background": "default",
          "type": "session",
          "style": "powerline"
        },
        {
          "template": " \uf017 {{ .CurrentDate | date \"15:04:05\" }} ",
          "foreground": "#a0a0a0",
          "powerline_symbol": "\ue0b2",
          "background": "default",
          "type": "time",
          "style": "powerline"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
