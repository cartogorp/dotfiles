{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#80cbc4",
          "background": "#18131e",
          "template": "{{ if .WSL }}WSL at {{ end }}{{ .Icon }}",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ce93d8",
          "background": "#18131e",
          "template": " {{ .UserName }}{{ if .ENV.SSH_CONNECTION }}@{{ .HostName }}{{ end }}",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "path",
          "style": "folder",
          "foreground": "#4db6ac",
          "background": "#18131e",
          "properties": {
            "style": "folder",
            "folder_icon": "\uf07c",
            "home_icon": "~",
            "max_depth": 3,
            "truncate_length": 20,
            "truncate_to_repo": true,
            "prefix": " "
          },
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ffb74d",
          "background": "#18131e",
          "template": " \uf126 {{ .HEAD }}{{ if .Working.Changed }} ★{{ end }}{{ if gt .Ahead 0 }} ↑{{ end }}{{ if gt .Behind 0 }} ↓{{ end }} ",
          "properties": {
            "fetch_status": true,
            "truncate_length": 20
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#ffd54f",
          "background": "#18131e",
          "template": " {{ .CurrentDate | date \"15:04\" }}  ",
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#aeea00",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#c7363f{{ end }}"
          ],
          "template": "❯ ",
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          }
        }
      ]
    }
  ]
}

