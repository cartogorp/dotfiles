{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}}",
          "foreground": "#80cbc4",
          "background": "#18131e",
          "type": "os",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none"
          },
          "template": " \uf0e7 ",
          "foreground": "#c7363f",
          "background": "#18131e",
          "type": "root",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "max_depth": 3,
            "prefix": " \uea83 ",
            "style": "folder",
            "truncate_to_repo": true
          },
          "template": "{{ .Path }}",
          "foreground": "#4db6ac",
          "background": "#18131e",
          "type": "path",
          "style": "folder"
        },
        {
          "properties": {
            "cache_duration": "none",
            "fetch_status": true,
            "truncate_length": 20,
            "truncate_symbol": "\u2026"
          },
          "template": "\uf408 \ue0a0 {{ .HEAD }}{{ if .Working.Changed }} \uf005{{ end }}{{ if gt .Ahead 0 }} \u2191{{ end }}{{ if gt .Behind 0 }} \u2193{{ end }}",
          "foreground": "#ffb74d",
          "background": "#18131e",
          "type": "git",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "display_host": true,
            "display_user": true,
            "template": "{{ if .SSHSession }}\uf489 {{ .UserName }}@{{ .HostName }}{{ else }}\uf415 {{ .UserName }}{{ end }}"
          },
          "foreground": "#ce93d8",
          "background": "#18131e",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          },
          "template": "{{ .CurrentDate | date \"15:04\" }} \uf017",
          "foreground": "#ffd54f",
          "background": "#18131e",
          "type": "time",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "template": "‚ùØ ",
          "foreground": "#aeea00",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#c7363f{{ end }}"
          ]
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
