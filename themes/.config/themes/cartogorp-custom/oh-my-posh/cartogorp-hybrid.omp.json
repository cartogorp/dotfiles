{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#80cbc4",
          "background": "#18131e",
          "template": "{{ if .WSL }}WSL at {{ end }} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#ce93d8",
          "background": "#18131e",
          "template": "  {{ .UserName }}{{ if .Env.SSH_CONNECTION }} @{{ .HostName }}{{ end }} ",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#4db6ac",
          "background": "#18131e",
          "properties": {
            "home_icon": "~",
            "folder_icon": ">",
            "max_depth": 3,
            "truncate_to_repo": true,
            "prefix": " "
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ffb74d",
          "background": "#18131e",
          "template": " {{ .HEAD | replace \"\" \"\" }}{{ if .Working.Changed }} {{ end }}{{ if gt .Ahead 0 }} ↑{{ end }}{{ if gt .Behind 0 }} ↓{{ end }} ",
          "properties": {
            "fetch_status": true,
            "truncate_symbol": "…",
            "truncate_length": 20,
            "plain_head": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "style": "plain",
          "foreground": "#ffb74d",
          "background": "#18131e",
          "template": " {{ .CurrentDate | date \"15:04\" }}  ",
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#c7363f",
          "background": "#18131e",
          "template": " 󱞩 ",
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          }
        }
      ]
    }
  ],
  "version": 3
}

