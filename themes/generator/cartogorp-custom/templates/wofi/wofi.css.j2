/*
 * Wofi Style - cartogorp-custom theme
 * Designed to match waybar and other applications
 */

* {
    font-family: "FiraCode Nerd Font", monospace;
    font-size: 13px;
    color: {{ colours.text.primary }};
}

/* Main window */
window {
    background-color: {{ colours.surface.a0_alpha85 }};
    border-radius: 12px;
    border: 1px solid {{ colours.accent.a0_alpha30 }};
}

/* Search input */
#input {
    margin: 8px;
    padding: 8px 12px;
    background-color: {{ colours.surface.a10_alpha70 }};
    color: {{ colours.text.primary }};
    border-radius: 8px;
    border: 1px solid {{ colours.ui.border_alpha30 }};
}

#input:focus {
    border: 1px solid {{ colours.primary.a0_alpha60 }};
    box-shadow: 0 0 5px {{ colours.primary.a0_alpha40 }};
}

/* Inner scroll container */
#inner-box {
    margin: 4px;
    padding: 4px;
    background-color: transparent;
}

/* Outer container */
#outer-box {
    margin: 0px;
    padding: 0px;
    background-color: transparent;
}

/* Scroll indicator */
#scroll {
    margin: 0px;
    padding: 0px;
    background-color: transparent;
}

/* Text field */
#text {
    margin: 0px;
    padding: 0px 8px;
}

/* Entry items */
#entry {
    padding: 8px;
    margin: 2px 4px;
    border-radius: 8px;
    background-color: {{ colours.surface.a10_alpha70 }};
    transition: background-color 0.2s ease;
}

#entry:selected {
    background-color: {{ colours.accent.a0_alpha50 }};
}

#entry:hover {
    background-color: {{ colours.ui.hover_alpha50 }};
}

/* Application icons */
#img {
    margin-right: 8px;
    background-color: transparent;
}

/* Selected item indicator */
#entry:selected #text {
    color: {{ colours.text.primary }};
    font-weight: bold;
}

/* Error messages */
#message {
    padding: 8px;
    margin: 4px;
    border-radius: 8px;
    background-color: {{ colours.danger.a0_alpha50 }};
    color: {{ colours.text.primary }};
}

/* No entries text */
#entry:unselected:hidden {
    background-color: transparent;
}

/* User feedback styles for empty results */
#entry > #text:placeholder {
    color: {{ colours.text.muted }};
}

/* Scrollbar styling */
scrollbar {
    background-color: transparent;
    border-radius: 8px;
}

scrollbar slider {
    background-color: {{ colours.primary.a0_alpha40 }};
    border-radius: 8px;
    margin: 2px;
}

scrollbar slider:hover {
    background-color: {{ colours.primary.a0_alpha60 }};
}

